{
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.enable": true,
  "editor.formatOnSave": false,
  "eslint.debug": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "terraform",
    "typescriptreact"
  ],
  "eslint.onIgnoredFiles": "warn",
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[terraform]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[javascript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[javascriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[json]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "jest.jestCommandLine": "yarn test",
  "jest.autoRun": { 
    "watch": false, 
    "onStartup": ["all-tests"],
    "onSave": "test-file"
  }
}
